generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


datasource db {
  provider = "postgresql"
}

model User {
  id              String       @id @default(uuid())
  email           String?      @unique
  phone           String?      @unique
  createdAt       DateTime     @default(now())
  firstName       String?
  lastName        String?
  isEmailVerified Boolean      @default(false)
  isPhoneVerified Boolean      @default(false)
  passwordHash    String?
  updatedAt       DateTime     @updatedAt
  userType        String       @default("USER")
  merchant        Merchant?
  sessions        Session[]
  devices         UserDevice[]
  profile         UserProfile?
  roles           UserRole[]
  passwordResets PasswordReset[]
}

model UserProfile {
  id        String    @id @default(uuid())
  userId    String    @unique
  dob       DateTime?
  gender    String?
  avatarUrl String?
  address   String?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OTP {
  id        String   @id @default(uuid())
  phone     String
  otp       String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String
  userAgent    String?
  ip           String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserDevice {
  id         String   @id @default(uuid())
  userId     String
  deviceId   String
  deviceName String?
  isTrusted  Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Merchant {
  id               String  @id @default(uuid())
  userId           String  @unique
  businessName     String
  businessCategory String?
  gstNumber        String?
  upiId            String?
  qrCodeUrl        String?
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Role {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  users UserRole[]
}

model UserRole {
  id     Int    @id @default(autoincrement())
  userId String
  roleId Int
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
}

model PasswordReset {
  id         String   @id @default(uuid())
  userId     String
  otp        String
  expiresAt  DateTime
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}